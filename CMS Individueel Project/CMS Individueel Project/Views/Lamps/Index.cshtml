@model IEnumerable<CMS_Individueel_Project.Data.Models.Lamp>

@{
    ViewData["Title"] = "Index";
}

<h1>Inventaris</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Lamps" asp-action="Index">
    <p>
        Model naam: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producent.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Watt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kleur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prijs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aantal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
            @Html.ActionLink(item.Producent.Naam,
                "ProducentenLampen",  // <-- Controller Name.
                "Lamps", // <-- ActionMethod
                new { id = item.ProducentId }, // <-- Route arguments.
                null  // <-- htmlArguments .. which are none. You need this value
                //     otherwise you call the WRONG method ...
                //     (refer to comments, below).
            )  
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Watt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kleur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prijs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aantal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
