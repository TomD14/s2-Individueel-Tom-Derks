@model Content_Management_System.Models.Lamp
@{
    ViewData["Title"] = "Create Lamp";
}
<h2>Create</h2>
<h4>Lamp</h4>
<hr />
<form asp-action="LampToevoegen" class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Model</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Watt</label>
        <input asp-for="Watt" class="form-control" />
        <span asp-validation-for="Watt" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Kleur</label>
        <input asp-for="Kleur" class="form-control" />
        <span asp-validation-for="Kleur" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Aantal</label>
        <input asp-for="Aantal" class="form-control" />
        <span asp-validation-for="Aantal" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn bg-primary" />

    </div>
</form>
@{
    if (@TempData["Msg"] != null)
    {
        <script>

            alert('@TempData["msg"]')
        </script>

    }
}  